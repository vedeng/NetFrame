<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lc_error_network_img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@mipmap/icon_no_net" />

    <TextView
        android:id="@+id/lc_error_network_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="当前网络不可用"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lc_error_network_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="建议您检查网络后再试"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/lc_error_network_refresh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/rct_sld_r3"
        android:backgroundTint="#0099ff"
        android:gravity="center"
        android:text="刷新"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>