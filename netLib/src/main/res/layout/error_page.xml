<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/error_net"/>

    <TextView
        android:id="@+id/error_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="当前网络不可用"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="建议您检查网络后再试"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/error_refresh"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:minWidth="100dp"
        android:background="@drawable/selector_error_btn_blue"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:gravity="center"
        android:visibility="gone"
        android:text="刷新"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/error_extra_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/error_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:minWidth="100dp"
            android:background="@drawable/selector_error_btn_blue"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="刷新"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/error_extra"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:minWidth="100dp"
            android:background="@drawable/selector_error_btn_blue"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="25dp"
            android:singleLine="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/error_height_adjust"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>